{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./",
    "target": "es5",
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "DOM"
    ],
    "listEmittedFiles": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".storybook",
    "stories"
  ]
}